<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HomeRentApp_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HomeRentApp_MAUI.Views"
    Shell.TabBarBackgroundColor="{StaticResource Fondo}"
    Shell.FlyoutBehavior="Disabled"
    Title="HomeRentApp_MAUI">

    <TabBar>
        <ShellContent Title="Departamentos"
                      ContentTemplate="{DataTemplate local:DepartamentosPage}"
                      Icon="home.png" />

        <ShellContent Title="Agregar"
                      ContentTemplate="{DataTemplate local:NuevoDepartamentoPage}"
                      Icon="add.png" />
    </TabBar>

</Shell>
